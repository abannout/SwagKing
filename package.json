{
  "name": "player-skeleton-typescript-nodejs",
  "module": "es2022",
  "target": "es2017",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --es-module-specifier-resolution=node dist/src/index.js",
    "compile": "tsc --removeComments true",
    "dev": "npm run dev:watch",
    "dev:watch-node": "nodemon --ignore 'logs/**' --on-change-only --es-module-specifier-resolution=node dist/src/index.js | pino-pretty",
    "dev:watch-ts": "tsc -w",
    "dev:watch": "concurrently --kill-others -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run dev:watch-ts\" \"npm run dev:watch-node\"",
    "format": "prettier --config .prettierrc 'src/**/*.ts' 'test/**/*.ts' --write",
    "lint": "eslint . --ext .ts",
    "test": "mocha"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.10.3",
    "axios": "^1.4.0",
    "pino": "^8.14.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.17.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "pino-pretty": "^9.4.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1"
  }
}
